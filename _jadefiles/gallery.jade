section.gallery#gallery
	.gallery-stage-container
		.gallery-stage
			


			//- Control & Content Container
			.control-content-container


				
				.stage-content-wrap
					.painting-load


			
			a(href="#gallery" class="stage-close-button stage-toggle")
				span


	.gallery-thumb-wrap
		
		.primary-title
		
			{% include icons/icon-left-squiggle.html %}

			h1 Paintings
			
			{% include icons/icon-right-squiggle.html %}			
			
		{% for painting in site.data.settings.paintings %}

		a(href="#gallery" data-folder="{{ painting.folder }}" class="thumb-unit stage-toggle show-full" style="background-image:url(/assets/img/gallery/paintings/{{ painting.folder }}/thumb.jpg);")
			.thumb-overlay
				strong {{ painting.name }}

		{% endfor %}

